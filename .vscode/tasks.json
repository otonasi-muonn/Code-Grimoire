// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": {
				"owner": "esbuild",
				"fileLocation": ["relative", "${workspaceFolder}"],
				"pattern": {
					"regexp": "^âœ˜ \\[ERROR\\] (.+?)\\n\\n\\s+(.+?):(\\d+):(\\d+):",
					"file": 2,
					"line": 3,
					"column": 4,
					"message": 1
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^\\[esbuild\\] Watching",
					"endsPattern": "^\\[esbuild\\]"
				}
			},
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
