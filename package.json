{
  "name": "codegrimoire",
  "displayName": "CodeGrimoire",
  "description": "Convert code into a magical circle. Visualize TypeScript/JavaScript dependency graphs as beautiful magic circles.",
  "version": "0.1.1",
  "publisher": "muonn",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/otonasi-muonn/Code-Grimoire"
  },
  "homepage": "https://github.com/otonasi-muonn/Code-Grimoire#readme",
  "bugs": {
    "url": "https://github.com/otonasi-muonn/Code-Grimoire/issues"
  },
  "keywords": [
    "dependency",
    "visualization",
    "graph",
    "typescript",
    "javascript",
    "magic circle",
    "code analysis"
  ],
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "galleryBanner": {
    "color": "#1a1a2e",
    "theme": "dark"
  },
  "activationEvents": [
    
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codegrimoire.openGrimoire",
        "title": "CodeGrimoire: Open Grimoire"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "node esbuild.js --production",
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/d3-force": "^3.0.10",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.100.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.24.0",
    "eslint": "^9.39.2",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "@types/d3-hierarchy": "^3.1.7",
    "d3-force": "^3.0.0",
    "d3-hierarchy": "^3.1.2",
    "pixi-viewport": "^6.0.3",
    "pixi.js": "^8.6.6",
    "typescript": "^5.9.3"
  }
}
